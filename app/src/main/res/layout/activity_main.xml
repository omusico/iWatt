<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    android:paddingBottom="0dp" tools:context=".Splash"
    android:background="@drawable/backg"
    android:id="@+id/relative">



    <LinearLayout
        android:id="@+id/button_row_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/knowgo"
            android:background="@drawable/knowgo_b"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/button_row_linear_layout"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"/>




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:id="@+id/programme"
            android:background="@drawable/programme"
            android:layout_gravity="right"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginLeft="-80dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timetable"
            android:background="@drawable/timetable"
            android:layout_gravity="right"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="25dp"/>

        <Button
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:id="@+id/enquiry"
            android:background="@drawable/enquires"
            android:layout_gravity="right"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="25dp"
            />

        <Button
            android:layout_width="216dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rate_lecture"
            android:id="@+id/rate"
            android:layout_gravity="right"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="25dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guide"
            android:background="@drawable/campus_guide"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/library"
            android:background="@drawable/library"
            style="?android:attr/borderlessButtonStyle"
            android:layout_gravity="right"
            android:layout_marginTop="25dp"/>


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:background="@drawable/graduate"
        android:layout_marginBottom="58dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="#ffffff"
        android:alpha="0.8"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/welcome"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="20dp"/>


</RelativeLayout>
